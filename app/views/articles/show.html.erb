<h2 class="mt-4"><%= @article.title%></h2>
<div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= @article.user.username %>
            <%= link_to gravatar_for(@article.user, size: 50), user_path(@article.user) %>
          </div>
          <div class="card-body">
            <%# truncate method to truncate article description lengths %>
            <div class="card-text text-left"><%= simple_format(@article.description) %></div>
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(@article), method: :delete, class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
            Edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
</div>
<p><%= button_to "Create new Article",new_article_path, method: :get%></p>



<h1>Showing Article Details</h1>
<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>Description: </strong><%= @article.description %></p>
<p>
<%= link_to "Edit", edit_article_path(@article.id) %> |
<%= link_to "Delete", article_path(@article.id), method: :delete, data: { confirm: "Are you sure?" } %> |
<%= link_to "Return to Articles listing", articles_path %>
</p>