<h1 class="mt-4">Create a New Category</h1>

<%# If there were any errors with creating the user, display
to the end user in an unordered list %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%# Render the form partial for errors.  Pass in the @user object as the contextual variable to the partial %>
      <%= render 'shared/errors', obj: @user %>
      <%# Change form scope to show current information to be edited %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a Category Name" %>
          </div>
        </div>

        <div class="form-group-row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
      <div class="mb-3">
      <%= link_to "[ Return to Articles listing ]", articles_path, class: "text-info" %>
    </div>
</div>


