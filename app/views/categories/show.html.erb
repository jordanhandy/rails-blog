<h1 class="mt-4">Category: <%= category.name %></h1>

<% if logged_in? && current_user.admin? %>
    <div class="row">
        <span class="badge badge-info"><%= link_to "Edit Category Name", edit_category_path(category) %> </span>
    </div>
<% end %>

<div class="flickr_pagination">
    <%= will_paginate @category_articles, :container => false %>
</div>
<%= render 'articles/article', obj: @category.articles %>
<%= button_to "Create new Article",new_article_path, method: :get %>

<div class="flickr_pagination mb-4">
    <%= will_paginate @category_articles, :container => false %>
</div>